{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["/*"],
      "@components": ["common/components"],
      "@components/*": ["common/components/*"],
      "@hooks": ["common/hooks"],
      "@hooks/*": ["common/hooks/*"],
      "@modules": ["modules"],
      "@modules/*": ["modules/*"],
      "@utils": ["common/utils"],
      "@utils/*": ["common/utils/*"],
      "@styles/*": ["common/styles/*"],
      "@theme": ["common/styles/theme"],
      "@types": ["common/types"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
